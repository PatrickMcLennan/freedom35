doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="./style.css")
        link(href="https://fonts.googleapis.com/css?family=Muli:200,300,400,600&display=swap", rel="stylesheet")
        script(defer src="./app.js")
        - const months = [1,2,3,4,5,6,7,'August', 'September']
        title Freedom 35 - #{months[new Date().getMonth()]} #{new Date().getDate()}
    body
        nav.nav
            h1.nav_h1 Freedom 35

            ul.nav_ul
                for navItem in [{href: '#about', display: 'About'}, {href: '#story', display: 'Our Story'}, {href: '#products', display: 'Our Products'}, {href: '#contact', display: 'Contact Us'}]
                    li.nav_li
                        a.nav_a(href=navItem.href) #{navItem.display}

            .nav_mobile
                .nav_mobile_hamburger_box
                    for line in ['top', 'middle', 'bottom']
                        span(class='nav_mobile_hambuger_' + line)

                ul.nav_ul_mobile
                    for navItem in [{href: '#about', display: 'About'}, {href: '#story', display: 'Our Story'}, {href: '#products', display: 'Our Products'}, {href: '#contact', display: 'Contact Us'}]
                        li.nav_li_mobile
                            a.nav__mobile(href=navItem.href) #{navItem.display}

        main.main
            //- MODALS
            - const modals = ['Skiing in the Alps', 'Broadway at night', 'One with nature']
            - const aboutModalClasses = ['_ski', '_new-york', '_wilderness']
            - const aboutModalPics = [0,6,8]
            - const aboutModalInputs = [{type: 'text', placeholder: 'First Name', required: true}, {type: 'text', placeholder: 'Last Name', required: true}, {type: 'email', placeholder: 'Email', required: true}, {type: 'number', placeholder: 'Phone Number', required: false}]

            .backdrop#backdrop
                for modal in modals
                    figure.modal(class="about" + aboutModalClasses[modals.indexOf(modal)])
                        picture.modal_picture
                            source(media="(max-width: 750px)", srcset="../img/picture-" + aboutModalPics[modals.indexOf(modal)] + "-sml.jpg")
                            source(media="(min-width: 751px)", srcset="../img/picture-" + aboutModalPics[modals.indexOf(modal)] + "-lrg.jpg")
                            img(src="../img/picture-" + aboutModalPics[modals.indexOf(modal)] + "-sml.jpg", alt=modal)
                        figcaption.modal_figcaption 
                        h4.modal_header Sign up today to learn more about 
                            span.modal_span #{modal}
                        form.modal_form
                            span.modal_form_span Please fill out all required fields
                            for input in aboutModalInputs
                                input(class=input.required ? "modal_text_input modal_text_input_" + aboutModalPics[modals.indexOf(modal)] : modal_text_input, type=input.type, placeholder=input.placeholder, required=input.required)

            section.jumbotron
                button.jumbotron-left-arrow &lt;
                button.jumbotron-right-arrow &gt;

                - const jumbotronPictureNumbers = [2,3,5]
                - const pictureHeaders = ['Are you on track to retire early?', 'Retirement in the mountains -- One couples story', 'How to budget for travelling      while retired']
                - const pictureLinks = ['Our Deferred Savings Program', 'Read the Hartmans story', 'Use our Travel Tracker calculator']

                for number in jumbotronPictureNumbers
                    figure.jumbotron_figure.viewport-offset-0
                        picture.jumbotron_picture
                            source(media="(max-width: 750px)", srcset="../img/picture-" + number + "-sml.jpg")
                            source(media="(min-width: 751px)", srcset="../img/picture-" + number + "-lrg.jpg")
                            img.jumbotron_picture_img(src="../img/picture-" + number + "-sml.jg", alt="#{pictureHeaders[jumbotronPictureNumbers.indexOf(number)]}")
                        figcaption.jumbotron_figcaption
                            h2.jumbotron_headline #{pictureHeaders[jumbotronPictureNumbers.indexOf(number)]}
                            p.jumbotron_copy Lorem ipsum dolor sit, amet consectetur adipisicing elit. Voluptatem esse blanditiis a illo, eligendi sequi hic, ex earum cupiditate quas neque aspernatur, id sit voluptate.
                            a.jumbotron_link(href="www.google.com" target="_blank") #{pictureLinks[jumbotronPictureNumbers.indexOf(number)]}

            section.about#about
                h3.about_header.header About Us
                h6.about_tagline Everyone has a retirement dream
                
                - const aboutPictureNumbers = [0,6,8]
                - const aboutTaglines = ['Ski Trips', 'New York', 'Wilderness Retreats']

                .about_content
                    for picture in aboutPictureNumbers
                        .about_picture_box
                            picture.about_picture
                                source(media="(max-width: 750px)", srcset="../img/picture-" + picture + "-sml.jpg")
                                source(media="(min-width: 751px)", srcset="../img/picture-" + picture + "-lrg.jpg")
                                img.about_picture_img(src="../img/picture-" + picture + "-sml.jg", alt="#{aboutTaglines[aboutPictureNumbers.indexOf(picture)]}")
                            button.about_picture_button(class="about_picture_button_" + picture) Inquire Today
                    .about_text_box
                        h6.about_placeholder Hover over an image to learn more
                        h6.about_text_box_heading Let us help you achieve yours
                        for picture in aboutPictureNumbers
